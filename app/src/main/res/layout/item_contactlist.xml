<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPersonnr"
        android:text="999999"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ivKontakt"
        android:src="@drawable/ic_contact"
        android:layout_width="wrap_content"
        android:layout_alignRight="@+id/tvPersonnr"
        android:layout_alignLeft="@+id/tvPersonnr"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvPersonnr"
        android:paddingTop="3dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99999999"
        android:id="@+id/tvKdNr"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/tvPersonnr"
        android:layout_toEndOf="@+id/tvPersonnr"
        android:layout_marginLeft="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kundensuch- \nbezeichnung"
        android:id="@+id/tvKTxt"
        android:ellipsize="end"
        android:layout_below="@+id/tvKdNr"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/tvKdNr"
        android:layout_alignStart="@+id/tvKdNr"
        android:layout_marginTop="5dp"
        android:maxLines="2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;Kontakt>"
        android:id="@+id/tvKontaktname"
        android:ellipsize="end"
        android:layout_below="@+id/tvKTxt"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/tvKTxt"
        android:layout_alignStart="@+id/tvKTxt"
        android:layout_marginTop="5dp" />

</RelativeLayout>