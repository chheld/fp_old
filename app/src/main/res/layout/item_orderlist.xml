<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvANrlll"
        android:text="999999"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ivCustomer"
        android:src="@drawable/ic_order2"
        android:layout_width="wrap_content"
        android:layout_alignRight="@+id/tvANrlll"
        android:layout_alignLeft="@+id/tvANrlll"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvANrlll"
        android:paddingTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99999999"
        android:id="@+id/lblKdNr"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/tvANrlll"
        android:layout_toEndOf="@+id/tvANrlll"
        android:layout_marginLeft="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/ivOverlay"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_default"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_alignRight="@+id/tvANrlll"
        android:layout_alignLeft="@+id/tvANrlll"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvANrlll"
        android:paddingTop="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kundensuch- \nbezeichnung"
        android:id="@+id/tvKTxt"
        android:ellipsize="end"
        android:layout_below="@+id/lblKdNr"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/lblKdNr"
        android:layout_alignStart="@+id/lblKdNr"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bemerkung"
        android:id="@+id/tvBemerkung"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_below="@+id/tvKTxt"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/tvKTxt"
        android:layout_alignStart="@+id/tvKTxt" />

</RelativeLayout>