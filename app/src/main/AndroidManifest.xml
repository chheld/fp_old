<?xml version="1.0" encoding="utf-8"?>

<manifest

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.support.android.designlibdemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DesignDemo"
        android:name=".AppController" >

        <activity android:name=".ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".test.test_SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.OrderListActivity"
            android:label="@string/title_activity_orders"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:value="com.support.android.designlibdemo.MainActivity"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".ui.OrderDetailsActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_order"
            android:parentActivityName=".ui.OrderListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.OrderListActivity" />
        </activity>

        <activity
            android:name=".ui.ContactListActivity"
            android:label="Kontakte"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:value="com.support.android.designlibdemo.MainActivity"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".provider.OrderSuggestionProvider"
            android:authorities="com.support.android.designlibdemo.provider.OrderSuggestionProvider"
            android:exported="false" />

    </application>

</manifest>
